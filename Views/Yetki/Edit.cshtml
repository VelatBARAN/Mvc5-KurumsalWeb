@model KurumsalWeb.Models.Model.Yetki

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.YetkiId)

        <div class="form-group">
            @Html.LabelFor(model => model.YetkiAd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="YetkiAd" required class="form-control" value="@Model.YetkiAd"/>
                @Html.ValidationMessageFor(model => model.YetkiAd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Güncelle" class="btn btn-success" />
                <a href="/yonetimpaneli/yetki" class="btn btn-danger">İptal</a>
            </div>
        </div>
    </div>
}

