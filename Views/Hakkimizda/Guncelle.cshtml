@model KurumsalWeb.Models.Model.Hakkimizda
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <script type="text/javascript">
    CKEDITOR.replace('editor')
    </script>

@using (Html.BeginForm("Guncelle","Hakkimizda",FormMethod.Post,new { @enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Açıklama</label>
        <textarea name="Aciklama" class="ckeditor" required>@Model.Aciklama</textarea>
        <br />
        <label>Eski Resim :</label>
        <img src="@Model.ResimURL" width="80" height="80" class="img-responsiv"/>
        <br />
        <label>Resim</label>
        <input type="file" name="ResimURL" accept=".png,.jpg,.jpeg" class="form-control"/>
        <br />
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-success">Güncelle</button>
            <a href="/yonetimpaneli/hakkimizda" class="btn btn-danger">İptal</a>
        </div>
        
    </div>
}

