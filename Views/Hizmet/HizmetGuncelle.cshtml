@model KurumsalWeb.Models.Model.Hizmet
@{
    ViewBag.Title = "HizmetGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>
@using (Html.BeginForm("HizmetGuncelle", "Hizmet", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Başlık</label>
        <input type="text" name="Baslik" value="@Model.Baslik" class="form-control" required />
        <br />
        <label>Açıklama</label>
        <textarea class="ckeditor" required name="Aciklama">@Model.Aciklama</textarea>
        <br />
        <label>Eski Resim</label>
        <img src="@Model.ResimURL" width="80" height="80" class="img-responsive"/>
        <br />
        <label>Resim</label>
        <input type="file" name="ResimURL" class="form-control" accept=".png,.jpg,.jpeg" />
        <br />
        <br />
        <input type="submit" class="btn btn-success" value="Güncelle" />
        <a href="/yonetimpaneli/hizmetler" class="btn btn-danger">İptal</a>
    </div>
}

