@model KurumsalWeb.Models.Model.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>
@using (Html.BeginForm("KategoriEkle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
        <label>Kategori Adı</label>
        @Html.TextBoxFor(model => model.KategoriAd, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.KategoriAd, "", new { @class = "text-danger" })
        <br />
        <label>Açıklama</label>
        <textarea name="Aciklama" class="ckeditor"></textarea>
        <br />
        <br />
        <button type="submit" style="background-color:#00ffff" class="btn btn-default">Kaydet</button>
        <a href="/yonetimpaneli/blogkategori" class="btn btn-danger">İptal</a>
    </div>
}

