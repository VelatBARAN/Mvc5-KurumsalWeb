@model KurumsalWeb.Models.Model.HizmetAlan
@{
    ViewBag.Title = "HizmetAlanGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>
@using (Html.BeginForm("HizmetAlanGuncelle", "HizmetAlan", FormMethod.Post,new { @enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()
<div class="form-group">
    <label>Başlık</label>
    <input type="text" name="Baslik" value="@Model.Baslik" required class="form-control" />
    <br />
    <label>Başlık</label>
    <textarea name="Aciklama" class="ckeditor" required>@Html.Raw(Model.Aciklama)</textarea>
    <br />
    <label>Eski Resim</label>
    <img src="@Model.ResimURL" width="300" height="300" class="img-responsive" />
    <br />
    <label>Yeni Resim</label>
    <input type="file" width="300" height="300" name="ResimURL" accept=".png,.jpg,.jpeg" />
    <br />
    <button type="submit" class="btn btn-default">Güncelle</button>
    <a href="/yonetimpaneli/hizmetalanlar" class="btn btn-danger">İptal</a>
</div>
}

