@model KurumsalWeb.Models.Model.Iletisim
@{
    ViewBag.Title = "IletisimGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("IletisimGuncelle", "Iletisim", FormMethod.Post))
{
@Html.AntiForgeryToken()
    <div class="form-group">
        <br />
        <label>Adres</label>
        <input type="text" name="Adres" required value="@Model.Adres" class="form-control" />
        <br />
        <label>Telefon</label>
        <input type="text" name="Telefon" required value="@Model.Telefon" class="form-control" />
        <br />
        <label>Fax</label>
        <input type="text" name="Fax" value="@Model.Fax" class="form-control" />
        <br />
        <label>Telegram</label>
        <input type="text" name="Linkedln" value="@Model.Telegram" class="form-control" />
        <br />
        <label>Linkedln</label>
        <input type="text" name="Telegram" value="@Model.Linkedln" class="form-control" />
        <br />
        <label>Twitter</label>
        <input type="text" name="Twitter" value="@Model.Twitter" class="form-control" />
        <br />
        <label>Instagram</label>
        <input type="text" name="Instagram" value="@Model.Instagram" class="form-control" />
        <br />
        <label>Email</label>
        <input type="email" name="Email" required value="@Model.Email" class="form-control" />
        <br />
        <br />
        <button type="submit" class="btn btn-success">Güncelle</button>
        <a href="/yonetimpaneli/iletisim" class="btn btn-danger">İptal</a>
    </div>
}

