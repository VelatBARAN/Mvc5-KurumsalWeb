@model KurumsalWeb.Models.Model.Admin
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="MVC5 - Kurumsal Web Projesi">
    <meta name="keyword" content="Javascript, MVC, MSSQL, C#, Jquery, Entity Framework, Responsive, Datatable, Ajax">

    <title>Admin Paneli Giriş | WBSOFTWARE</title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/AdminLayout/css/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="~/Content/AdminLayout/css/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="~/Content/AdminLayout/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/Content/AdminLayout/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="~/Content/AdminLayout/css/style.css" rel="stylesheet">
    <link href="~/Content/AdminLayout/css/style-responsive.css" rel="stylesheet" />

</head>
<body style="background-color:#deadad">
    <form class="login-form resp" method="post" action="/Admin/Login" style="background-color:#00ffff">
        <div class="login-wrap">
            @if (Session["adminid"] == null)
            {
                <p class="alert" style="color:red">@ViewBag.Uyari</p>
            }
            <div>
                <p style="font-size:30px;color:#a40c0c">Admin Paneli Giriş Sayfası</p>
            </div>
            <p class="login-img"><i class="icon_lock_alt"></i></p>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_profile"></i></span>
                <input type="email" name="Eposta" class="form-control" placeholder="Eposta gir..." autofocus>
            </div>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                <input type="password" name="Sifre" class="form-control" placeholder="Şifre gir...">
            </div>
            <label class="checkbox">
                <input type="checkbox" value="remember-me" />Hatırla beni
                <span class="pull-right"> <a href="/Admin/SifremiUnuttum"> Şifreni mi Unuttum?</a></span>
            </label>
            <button class="btn btn-primary btn-lg btn-block" type="submit">Giriş</button>
        </div>
    </form>
    <div class="text-right">
        <div class="credits">
            <a href="#">Bilgisayar Mühendisi - Welat BARAN tarafından hazırlandı</a>
        </div>
    </div>
</body>
</html>
