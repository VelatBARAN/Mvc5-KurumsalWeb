@model IEnumerable<KurumsalWeb.Models.Model.Kimlik>

@{
    ViewBag.Title = "Admin Kimlik";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}    

<table class="table table-striped table-advance table-hover table-bordered table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Keywords)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResimURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unvan)
        </th>
        <th> İşlemler </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Keywords)
        </td>
        <td>
            @Html.Raw(item.Description)
        </td>
        <td>
            <img src="@item.ResimURL" width="100" height="100" class="img-responsive"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unvan)
        </td>
        <td>
            <a class="btn btn-success" href="/Kimlik/Edit/@item.KimlikId">Güncelle</a>
        </td>
    </tr>
}

</table>
