@model IEnumerable<KurumsalWeb.Models.Model.Blog>
@using KurumsalWeb.Helper;
@{
    Layout = null;
}

<div class="col-lg-3">
    <div class="widget">
        <h5 class="widgetheading">En Son Blog Yazıları</h5>
        <ul class="link-list">
            @{
                int say = 0;
                foreach (var item in Model)
                {
                    say++;
                    if (say <= 4)
                    {
                        <li><a href="/BlogPost/@SeoHelper.ToSeoUrl(item.Baslik).ToLower()-@item.BlogId">@item.Baslik</a></li>
                    }
                }
            }

        </ul>
    </div>
</div>