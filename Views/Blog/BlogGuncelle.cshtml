@model KurumsalWeb.Models.Model.Blog
@{
    ViewBag.Title = "BlogGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

@using (Html.BeginForm("BlogGuncelle", "Blog", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Baslik, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" name="Baslik" class="form-control" required value="@Model.Baslik" />
            @*@Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control"} })*@
            @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Icerik, htmlAttributes: new { @class = "control-label col-md-2" })<span>*</span>
        <div class="col-md-10">
            <textarea class="ckeditor" name="Icerik" required="" minlength="5">@Model.Icerik</textarea>
            @Html.ValidationMessageFor(model => model.Icerik, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="col-md-10">
        <label>Eski Resim :</label>
        <img src="@Model.ResimURL" width="80" height="80" class="img-responsiv" />
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ResimURL, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="ResimURL" accept=".png,.jpg,.jpeg" class="form-control" />
            @Html.ValidationMessageFor(model => model.ResimURL, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.KategoriId, "KategoriId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("KategoriId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.KategoriId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Güncelle" class="btn btn-primary" />
            <a href="/yonetimpaneli/blogkayit" class="btn btn-danger">İptal</a>
        </div>
    </div>
</div>
}


