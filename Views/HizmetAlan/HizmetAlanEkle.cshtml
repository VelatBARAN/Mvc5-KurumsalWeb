@model KurumsalWeb.Models.Model.HizmetAlan
@{
    ViewBag.Title = "HizmetAlanEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>
@using (Html.BeginForm("HizmetAlanEkle", "HizmetAlan", FormMethod.Post,new { @enctype="multipart/form-data"}))
{@Html.AntiForgeryToken()
<div class="form-group">
    <label>Başlık</label>
    <input type="text" name="Baslik" placeholder="Başlık giriniz.." required class="form-control" />
    <br />
    <label>Başlık</label>
    <textarea type="text" name="Aciklama" placeholder="Açıklama giriniz.." class="ckeditor" required></textarea>
    <br />
    <label>Resim</label>
    <input type="file" width="300" height="300" name="ResimURL" accept=".png,.jpg,.jpeg" required/>
    <br />
    <button type="submit" class="btn btn-default">Kaydet</button>
    <a href="/yonetimpaneli/hizmetalanlar" class="btn btn-danger">İptal</a>
</div>
}

