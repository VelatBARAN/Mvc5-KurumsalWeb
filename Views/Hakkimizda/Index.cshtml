@model IEnumerable<KurumsalWeb.Models.Model.Hakkimizda>
@{
    ViewBag.Title = "Admin Hakkımızda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table-advance table-hover table-bordered table-responsive">

        <tr>
            <th>Açıklama</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.Raw(item.Aciklama)</td>
                    <td><img src="@item.ResimURL" width="100" height="100" class="img-responsive" /></td>
                    <td><a href="/Hakkimizda/Guncelle/@item.HakkimizdaId" class="btn btn-success">Güncelle</a></td>
                </tr>
            }

</table>
