@model KurumsalWeb.Models.Model.Admin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sifremi Unuttum | @ViewBag.Kimlik.Title</title>
    <link href="~/Content/AdminLayout/css/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="~/Content/AdminLayout/css/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="~/Content/AdminLayout/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/Content/AdminLayout/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="~/Content/AdminLayout/css/style.css" rel="stylesheet">
    <link href="~/Content/AdminLayout/css/style-responsive.css" rel="stylesheet" />
</head>
<body style="background-color:#deadad">
    
    <form method="post" action="/Admin/SifremiUnuttum/" style="background-color:#e0c2c2;margin-top:200px">
        <p class="alert alert-info">@ViewBag.Uyari</p>
        <div class="form-horizontal container">
            <hr />
            <div class="form-group" style="margin-top:15px">
                <div class="col-md-10">
                    <input type="email" name="Eposta" class="form-control" placeholder="Eposta gir..." autofocus required>
                </div>
            </div>
            <div class="form-group">
                <div class=" col-md-10">
                    <button class="btn btn-primary btn-lg btn-success" type="submit">Şifremi Mail Olarak Gönder</button>
                    <a href="/yonetimpaneli/giris" class="btn btn-lg" style="background-color:#ff6a00">Yönetim Paneli Giriş</a>
                </div>
            </div>
        </div>
    </form>
    <div class="text-right">
        <div class="credits">
            <a href="#">Bilgisayar Mühendisi - Welat BARAN tarafından hazırlandı</a>
        </div>
    </div>
</body>
</html>
